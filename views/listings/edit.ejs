<% layout("/layout/boilerplate") %>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit this Listing</h3>

    <form method="post" action="/listings/<%= listing.id %>?_method=PUT">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <br>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"/> 
        </div>
        
        <div class="mb-3">
            <lable for="description" class="form-label">About</lable>
            <br>
            <textarea 
              name="listing[description]"
              type="text" rows="6" cols="30" 
              class="form-control"
              >
              <%= listing.description %>
            </textarea>
        </div>

        <div class="mb-3">
            <lable for="image" class="form-label">Image</lable> 
            <br>
            <input name="listing[image]" value="<%= listing.image.url %>" type="text" class="form-control"/>
        </div>

        <div class="mb-3">
            <lable for="price" class="form-label">Price</lable>
            <br>
            <input name="listing[price]" type="number" value="<%= listing.price %>" class="form-control"/>
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <br>
            <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control"/>
        </div>
        
        <div class="mb-3">
            <lable for="country" class="form-label">Country</lable>
            <br>
            <input name="listing[country]"  type="text" value="<%= listing.country %>" class="form-control"/>
        </div>
        

        <button class="btn btn-dark mt-3">Edit</button>
    </form>
    </div>
    </div>
</body>